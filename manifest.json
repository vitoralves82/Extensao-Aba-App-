{
  "manifest_version": 3,
  "name": "Abrir como App",
  "version": "1.3.0",
  "description": "Abre a aba atual em uma janela tipo app (sem menus/abas). Pode fechar ou manter a aba original.",
  "permissions": ["tabs", "contextMenus", "storage"],
  "background": { "service_worker": "background.js" },

  "action": {
    "default_title": "Abrir esta aba como App",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "options_page": "options.html"
}
